{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build alle C-Dateien automatisch",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-I",
        "includes",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/build/HelloWorld.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Kompiliert automatisch alle .c-Dateien im src/-Ordner"
    }
  ]
}